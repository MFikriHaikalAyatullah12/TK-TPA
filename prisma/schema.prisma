// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String
  role          String    @default("admin")
  accounts      Account[]
  sessions      Session[]
  
  // Admin specific data
  tpaInfo       TpaInfo?
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model TpaInfo {
  id                String   @id @default(cuid())
  userId            String   @unique
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Basic Info
  tpaName           String?
  logo              String?
  heroImage         String?
  
  // Profile
  sejarah           String?  @db.Text
  visi              String?  @db.Text
  misi              String?  @db.Text
  strukturOrganisasi String? @db.Text
  
  // Contact Info
  alamat            String?
  telepon           String?
  whatsapp          String?
  email             String?
  jamOperasional    String?
  
  // Social Media
  instagram         String?
  facebook          String?
  
  // Other Info
  kurikulum         String?  @db.Text
  metodePembelajaran String? @db.Text
  
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  
  // Related data
  pengajar          Pengajar[]
  santri            Santri[]
  berita            Berita[]
  galeri            Galeri[]
  jadwal            Jadwal[]
  prestasi          Prestasi[]
}

model Pengajar {
  id          String   @id @default(cuid())
  tpaInfoId   String
  tpaInfo     TpaInfo  @relation(fields: [tpaInfoId], references: [id], onDelete: Cascade)
  
  nama        String
  foto        String?
  bidang      String?
  pengalaman  String?  @db.Text
  sertifikasi String?  @db.Text
  jadwal      String?  @db.Text
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Santri {
  id              String   @id @default(cuid())
  tpaInfoId       String
  tpaInfo         TpaInfo  @relation(fields: [tpaInfoId], references: [id], onDelete: Cascade)
  
  // Data Santri
  namaLengkap     String
  tempatLahir     String
  tanggalLahir    DateTime
  jenisKelamin    String
  alamat          String   @db.Text
  
  // Data Orang Tua
  namaAyah        String
  namaIbu         String
  pekerjaanAyah   String
  pekerjaanIbu    String
  noTelepon       String
  
  // Data Akademik
  kelasSebelumnya String?
  targetHafalan   String?
  
  // Progress
  jilid           String   @default("Iqra 1")
  hafalan         String?  @db.Text
  
  status          String   @default("active") // active, graduated, inactive
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Berita {
  id        String   @id @default(cuid())
  tpaInfoId String
  tpaInfo   TpaInfo  @relation(fields: [tpaInfoId], references: [id], onDelete: Cascade)
  
  judul     String
  konten    String   @db.Text
  gambar    String?
  kategori  String   @default("umum")
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Galeri {
  id        String   @id @default(cuid())
  tpaInfoId String
  tpaInfo   TpaInfo  @relation(fields: [tpaInfoId], references: [id], onDelete: Cascade)
  
  judul     String
  deskripsi String?  @db.Text
  gambar    String
  kategori  String   @default("kegiatan")
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Jadwal {
  id        String   @id @default(cuid())
  tpaInfoId String
  tpaInfo   TpaInfo  @relation(fields: [tpaInfoId], references: [id], onDelete: Cascade)
  
  kegiatan  String
  hari      String
  waktu     String
  tempat    String?
  pengajar  String?
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Prestasi {
  id        String   @id @default(cuid())
  tpaInfoId String
  tpaInfo   TpaInfo  @relation(fields: [tpaInfoId], references: [id], onDelete: Cascade)
  
  judul     String
  deskripsi String   @db.Text
  gambar    String?
  tahun     Int
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
